{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "importHelpers": true,
    "moduleResolution": "node",
    "composite": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "lib": ["es2016", "es2017", "es2018", "dom"],
    "plugins": [{ "name": "typescript-workspace-plugin" }]
  },
  "exclude": ["**/node_modules/**"]
}
